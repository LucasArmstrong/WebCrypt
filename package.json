{
  "name": "webcrypt",
  "version": "0.1.0",
  "description": "Zero-dependency AES-256-GCM encryption for text, files & WebRTC E2EE. Includes symmetric (password) and asymmetric (RSA-4096 hybrid) modes. Streaming, quantum-resistant key derivation, pure Web Crypto API.",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs",
      "types": "./index.d.ts"
    }
  },
  "type": "module",
  "files": [
    "src",
    "index.js"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules $(which jest)",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "lint": "npm run format:check",
    "prepublishOnly": "npm test && npm run format:check",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "encryption",
    "aes-256-gcm",
    "aes-gcm",
    "rsa-oaep",
    "hybrid-encryption",
    "asymmetric-encryption",
    "public-key-encryption",
    "webrtc",
    "webrtc-e2ee",
    "insertable-streams",
    "end-to-end-encryption",
    "e2ee",
    "file-encryption",
    "text-encryption",
    "secure-messaging",
    "quantum-resistant",
    "pbkdf2",
    "web-crypto",
    "zero-dependency",
    "browser",
    "nodejs"
  ],
  "author": "Lucas Armstrong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasarmstrong/webcrypt.git"
  },
  "homepage": "https://github.com/lucasarmstrong/webcrypt",
  "bugs": {
    "url": "https://github.com/lucasarmstrong/webcrypt/issues"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "avoid"
  }
}
